<script>
function clicked(lang) {
  alert("You clicked on " + lang + "!");
}

// Quiz
function checkAnswer(correct) {
  let msg = document.getElementById("quizMsg");
  if (correct) {
    msg.innerHTML = "âœ… Correct! You found the Cat ğŸ±";
    msg.style.color = "lightgreen";
  } else {
    msg.innerHTML = "âŒ Wrong! Try Again...";
    msg.style.color = "red";
  }
}
function checkAnswer(correct) {
  let msg = document.getElementById("quizMsg");
  if (correct) {
    msg.innerHTML = "âœ… Correct! You found the Dolphin ğŸ¬ ";
    msg.style.color = "lightgreen";
  } else {
    msg.innerHTML = "âŒ Wrong! Try Again...";
    msg.style.color = "red";
  }
}

// Memory Game
const numbers = [1, 2, 3, 4, 5];
let gameGrid = [...numbers, ...numbers];
gameGrid.sort(() => 0.5 - Math.random());
const gameContainer = document.getElementById("memoryGame");
let firstCard, secondCard, lockBoard = false, matches = 0;

gameGrid.forEach(num => {
  const card = document.createElement("div");
  card.classList.add("memory-card");
  card.innerHTML = `<div class="card-inner">
    <div class="card-front"></div>
    <div class="card-back">${num}</div>
  </div>`;
  gameContainer.appendChild(card);

  card.addEventListener("click", () => {
    if (lockBoard || card === firstCard) return;
    card.querySelector(".card-inner").classList.add("flipped");
    if (!firstCard) {
      firstCard = card;
    } else {
      secondCard = card;
      lockBoard = true;
      let val1 = firstCard.querySelector(".card-back").innerHTML;
      let val2 = secondCard.querySelector(".card-back").innerHTML;
      if (val1 === val2) {
        matches++;
        resetCards();
        if (matches === numbers.length) {
          document.getElementById("memoryMsg").innerHTML = "ğŸ‰ You matched all pairs!";
        }
      } else {
        setTimeout(() => {
          firstCard.querySelector(".card-inner").classList.remove("flipped");
          secondCard.querySelector(".card-inner").classList.remove("flipped");
          resetCards();
        }, 1000);
      }
    }
  });
});

function resetCards() {
  [firstCard, secondCard] = [null, null];
  lockBoard = false;
}
</script>

</body>
</html>
